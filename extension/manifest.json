{
	"name": "Overlay Tips",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Overlay informations on the web page",
    "options_page": "options/options.html",
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_title": "overlay tips",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "http://192.168.33.10/"
    ],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
    "background": {
        "scripts": ["vendor/jquery-2.1.0.min.js", "vendor/knockout-3.0.0.js", "vendor/store+json2.min.js", "share.js", "background.js"]
    },
    "permissions": [
        "tabs", "http://*/*", "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["http://www.elasticsearch.org/*"],
            "css": [],
            "js": ["vendor/jquery-2.1.0.min.js", "content_script.js"]
        }
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
